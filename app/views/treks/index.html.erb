<div class="container">
<h1>All treks:</h1>
<% if @treks %>
<div class="container">
  <div class="row">
    <% @treks.each do |trek| %>
      <div class="col-md-4">
        <h2><%= link_to trek.title, "/treks/#{trek.id}" %></h2>
        <%= image_tag trek.image.url, class: "index-item" %>
        <br>
      </div>
    <% end %>
  </div>
</div>
<% else %>
  <h1>No treks, buddy</h1>
<% end %>
</div>