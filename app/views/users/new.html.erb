<section class="padding-60">
    <div class="divied-60"></div>
    <div class="container">
        <div class="divied-40"></div>
        <div class="row">
            <div class="col-md-12 margin-btm20">
                <h3>Sign up to start trekking</h3>
            </div>
            <div class="col-md-12 margin-btm20">
                <div class="form-box">
                    <%= form_tag '/users', method: :post do %>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <%= label_tag :name %>
                                    <%= text_field_tag :name, nil, class:"form-control" %>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <%= label_tag :email %>
                                    <%= text_field_tag :email, nil, class:"form-control" %>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <%= label_tag :password %>
                                    <%= password_field_tag :password, nil, class:"form-control" %>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <%= label_tag :password_confirmation %>
                                    <%= password_field_tag :password_confirmation, nil, class:"form-control" %>
                                </div>
                            </div>
                            <div class="col-sm-12 text-right">
                                <%= submit_tag 'Sign up!', class:"btn btn-dark btn-lg" %>
                            </div>
                        </div>
                    <% end %><!--leave comment form-->
                </div>
            </div>
        </div>
    </div>
</section>
